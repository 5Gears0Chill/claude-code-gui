{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Claude Code GUI",
  "version": "0.1.0",
  "identifier": "com.claudecode.gui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Claude Code GUI",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ]
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Claude Code GUI - Beautiful interface for Claude Code CLI",
    "longDescription": "Claude Code GUI provides a beautiful, modern interface for Claude Code CLI. Features terminal integration, project management, and advanced file editing capabilities.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": ""
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {}
}